<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     android:id="@+id/activity_main"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="This is AlbumsActivity of JukeBox app.
   It contains the albums which are present in your device.
    You can navigate to different activities using the buttons below."
    android:textColor="#ff0000"
    android:textSize="15sp"
  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/artists"
            android:text="@string/artists"
            android:id="@+id/artists"
            android:textSize="10sp"
            android:layout_weight="1"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/podcasts"
            android:layout_weight="1"
            android:id="@+id/podcasts"
            android:text="@string/podcasts"
            android:textSize="10sp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/search"
            android:text="@string/search"
            android:id="@+id/search"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/store"
            android:layout_weight="1"
            android:text="@string/store"
            android:id="@+id/store"
            android:textSize="10sp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/now_playing"
            android:layout_weight="1"
            android:text="@string/now_playing"
            android:id="@+id/now_playing"
            android:textSize="10sp"
            android:textAlignment="center"
            />

    </LinearLayout>
</RelativeLayout>